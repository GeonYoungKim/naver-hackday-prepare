<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

	<select id="selectList" parameterType="com.hack.naver.model.Paging" resultType="hashmap">
		SELECT num,content
		FROM notice
		ORDER BY num DESC LIMIT #{no},#{unit};
	</select>
	
	<insert id="insert" parameterType="com.hack.naver.model.Notice" useGeneratedKeys="true" keyProperty="num"  keyColumn="num">
		INSERT INTO 
			naver_hack.notice (content, user_id) 
		VALUES
			(#{content},#{id});
		<selectKey keyProperty="num" resultType="Integer" order="AFTER">
	        SELECT LAST_INSERT_ID()
	    </selectKey>
		
	</insert>
</mapper>